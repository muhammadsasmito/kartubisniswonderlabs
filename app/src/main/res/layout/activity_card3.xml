<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.sasmito.wonderlabsbusiness.FirstActivity"
    android:background="@color/colorTeal"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="144dp"
        android:layout_height="120dp"
        android:src="@drawable/awan"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="140dp"
        />
    <ImageView
        android:layout_width="144dp"
        android:layout_height="120dp"
        android:src="@drawable/awan"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="140dp"
        android:layout_alignParentRight="true"
        android:scaleX="-1"
        />
    <LinearLayout
        android:id="@+id/lineMid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/maps"
                android:id="@+id/ivBack"
                android:layout_marginBottom="0dp"
                />
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:textSize="35sp"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:src="@drawable/title"
                android:id="@+id/ivTitle"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineBottom"
            android:background="@color/colorBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginBottom="50dp"
            >


            <TextView
                android:padding="10dp"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/locationAdd"
                />

            <Button
                android:id="@+id/btn_loc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_effect"
                android:padding="10dp"
                android:textSize="12sp"
                android:text="Go to location"
                android:drawableTop="@drawable/ic_navigation_white_24dp"
                android:gravity="center"
                android:onClick="location"
                android:textColor="@color/colorBottom"
                />


        </LinearLayout>
    </LinearLayout>



</RelativeLayout>
